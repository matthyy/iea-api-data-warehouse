{
    "compilerOptions": {
        "incremental": true,
        "target": "es2019",
        "module": "commonjs",
        "outDir": "./build",
        "lib": ["es2019", "es2020.promise", "es2020.string"],
        "strict": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": ["./node_modules/@types", "./src/@types"]
    },
    "exclude": ["./node_modules"],
    "include": ["./src/**/*"]
}
